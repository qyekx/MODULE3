<Window x:Class="ex_2.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification System" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Введите сообщение:" FontWeight="Bold" />
        <TextBox x:Name="MessageTextBox" Margin="0,5,0,15" />

        <Button Content="Отправить сообщение" Click="OnSendMessage" Width="150" Margin="0,0,0,10"/>
        <Button Content="Совершить звонок" Click="OnMakeCall" Width="150" Margin="0,0,0,10"/>
        <Button Content="Отправить email" Click="OnSendEmail" Width="150" />
    </StackPanel>
</Window>